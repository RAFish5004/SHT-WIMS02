	@*
    /CatalogItem/Index.cshtml 

     shows welcome message with ViewData["Title"] and foreach loop for the list view of all CatalogItems
     For the SearchList box see this URL

*@
@model IEnumerable<CatalogItem>
@{

    ViewData["pageTitle"] = "CiSelectList";

}

<body>
    <!-- make an input box and send filter string to ICListFilter action method in CartController -->

    <div>
        <h2> @ViewBag.AmPm  Welcome to Sam Houston Territory Inventory Management System </h2>

        <a asp-action="CiScrollList">Click to view Item List</a><br />


        <!-- make an input box and send results to ICListFilter action method in HomeController -->
        <form asp-action="CiListFilter" method="get">
            <div class="form-actions">
                <p>
                    Find by name: <input type="text" name="searchString" value="@ViewData["fltDescr"]" />
                    <input type="submit" value="Search" class="btn btn-default" />

                </p>
            </div>
        </form>
    </div>
</body>
